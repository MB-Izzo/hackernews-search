{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-max-props-per-line": [1, { "when": "always" }],
        "quotes":  ["error", "single"],
        "object-curly-newline": ["error", {
            "ObjectPattern": { "multiline": true, "minProperties": 8 }
        }]
    }
}